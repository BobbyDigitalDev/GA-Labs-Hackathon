@import url('https://fonts.googleapis.com/css?family=Lato:100, 300, 400, 700, 900' );
@import url('https://fonts.googleapis.com/css?family=PT+Sans');


h1.headline {font-family: 'Lato'; font-size: 3em; font-weight: 600; }
h2.sub-head {font-family: 'Lato'; font-size: 1.75em; font-weight: 400;}
h3.sub {font-family: 'PT Sans'; font-size: .8em; font-weight:400;}
p.p  {font-family: 'PT Sans'; font-size: 1em; font-weight:400;color:#5d5ba0;}
p.indexp  {font-family: 'PT Sans'; font-size: 1.5em; font-weight:400;}


h3.category-names{
  line-height: 150%;
  margin-bottom: 0px;
  padding-left: 10px;
}
.center {
  text-align: center;
}

.shadow {
text-shadow: 0px 2px 3px #666;
}

/*index page search styles
============================*/
input#name{
  padding-left: 20px;
  width:93%;
  font-size: 1.7rem;
  margin-bottom: 0px;
}

input[type=text]{
  border-bottom:0px !important;
}
.btn-flat{
  padding-left: 0px !important;
  padding-right: 0px !important;
  }
i.index{
  font-size: 2.3rem !important;
  position:absolute !important;
  top:6px !important;
  line-height:inherit;
}

/*search styles
============================*/
input#search{
  background-color: #f4f4f4;
  padding-left: 0px; 
  width: 80%;
}

.material-icons{
  margin-left: 0px;
}
ul{
  display: inline-block;
}
li{
  display: inline; 
}

nav{
  box-shadow: 0 0px 0px 0 rgba(0,0,0,0),0 0px 0px 0 rgba(0,0,0,0) !important;
}

.nav-wrapper{
  background-color: white;
}

.material-icons{
  margin-left: 0px;
  position:absolute !important;
}
ul{
  display: inline-block;
}

a.previous,.material-icons, input#search{
  position: relative;
  top: 9px;
  color: rgba(93, 89, 162, 1);
  border-bottom: 0px solid;
}
.nav-wrapper{
  background-color: white;
}


/*Map
=========================*/
div.set#map{
  width: 100%;
  height: 250px;
  background-color: #CCC; 
  position: relative;
}
div.set#map-canvas{
  width: 100%;
  height: 250px;
  background-color: #CCC; 
}
.gm-style-iw{
  width: auto;
}

/*Post
=========================*/
.post-info.row{
  height: 355px;
}

#post-content{
  overflow: auto;
  margin: 0 0 15px 0;
  padding: 0 0 0 0;
  height: 262px;
}

.posts-image{
  height: 150px;
  margin-bottom: 0px;
}

.post-group{
  display: inline-block;
  width: 350px;
}

img.results-image{
  width: 450px;
  height: 350px;
}

#location-name{
  margin-top: 0px;
}
.card{
  width: 95%;
}

.card .card-image img{
  height: 150px;
}

a.title{
  font-family: 'Lato'; 
  font-weight: 400;
  text-shadow: 0 0 3px #000;
  color: white;
  font-size: 1.2rem;
  line-height: .75rem;
  z-index: 10;
}

.card .card-content{
  padding-top:10px !important;
  padding-right:10px !important;
  padding-bottom:2px !important;
  padding-right:10px !important;
  color:#5d5ba0;}

.card-content{
  height:100px !important;
}

.category-names{
  margin-left:auto;
  margin-right:auto;
}

.post-text{
  display:block;
  height: 65px;
  overflow:hidden;
  color:#5d5ba0;
  position:absolute;
  bottom:20px;
  width:80%;
}

.card .card-image .card-title {
  margin: 0 20px 0 20px;
  left: -10px;  
}

.show-content{
  height: 45px;
}
.icon {
  z-index: 9999;
  position: absolute;
  top:10px;
  right:10px;
  width:20%;
}
.icon-large {
  position: relative;
  padding-left: 11px;
  width: 5.5%;
}

.icon-post{
  position:relative;
  width:70px;
  top:10px;
  padding:0 10px 0 10px;
}
span.card-title{
  position: absolute;
  bottom: 15px !important;
  line-height: 24px !important;
  padding-top: 0px !important;
  padding-right: 0px !important;
  padding-bottom: 0px !important;
  padding-left: 0px !important;
}

/*image style
=================================*/
.hero {
  position: absolute;
  z-index: -100;
  margin-top: -20px;
}

.logo {
  z-index: 9999;
  position: relative;
}

.hero-search {
  padding-top: 23%;
}

.index-block {
  padding-top: 4.5%;
}

/*MediaQueries
===========================*/

@media (max-width: 992px) {
  /*category name positions when in mobile mode*/
  .category-names{
    margin-left:70px;
  }

  div#location-info{
    margin-top:10px;
  }
  
  .material-icons{
    padding-top:0px;
  }
  
  p#post-content{
    height:auto;
  }
  .icon{
    width:15%;
  }
}
@media (max-width: 630px) {
  .category-names{
    margin-left:48px;
  }
  .material-icons{
    padding-top:10px;
  }
  .icon{
    width:10%;
  }
}