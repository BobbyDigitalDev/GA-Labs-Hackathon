    <div class="container col l12 index-block">
      <h1 class="headline col s12 center">Why Trekabilly?</h1>
      <p class="center indexp">Our community has both locals and tourists to give you the best of both worlds.
  Our community has both locals and tourists to give.</p>
      <h2 class="sub-head center">Browse some of our categories</h2> 
    </div>
  

    <% @categories.each do |cat| %>
      <ul style="list-style-type: none ">
        <li><h3><%= cat.name %></h3></li>
        <% post_count = 0 %>
        <% @posts.each do |post| %>
          <% if post.category_id == cat.id %>
            <h3><%= link_to post.title, post %></h3>
            <p>Category <%= post.category_id %></p>
            <p><%= link_to image_tag(post.image, class:'posts-image'), post %></p>
            <p><%= post.content[0...50]+"..." %></p>
            <br>
            <% post_count +=1 %>
          <% end %>
        <% break if post_count == 3 %>
        <% end %>
      </ul>
    <% end %>
  
