<h1>Trekabilly</h1>


<%= form_tag '/search', method: 'get' do %>
  <%= label_tag "search" %>
  <%= text_field_tag :name %>
  <%= submit_tag "search" %>
<% end %>




  <% @categories.each do |cat| %>
    <ul>
      <li><%= cat.name %></li>
        <% post_count = 0 %>
      <% @posts.each do |post| %>
        <% if post.category_id == cat.id %>
          <ul style="list-style-type: none ">
            <li><h3><%= post.title %></h3></li>
            <li>Category <%= post.category_id %></li>
            <li><img src="<%= post.image %>" style="width: 100px; height: auto"></li>
            <li><%= post.content %></li>
          </ul><br>
          <% post_count +=1 %>
        <% end %>
          <% break if post_count == 3 %>
      <% end %>
    </ul>
  <% end %>
